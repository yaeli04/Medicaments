<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#4000D4"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvCodeCIS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Code_CIS: " />

    <TextView
        android:id="@+id/tvDenomination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Denomination: " />

    <TextView
        android:id="@+id/tvFormePharmaceutique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forme_pharmaceutique: " />

    <TextView
        android:id="@+id/tvVoiesAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voies_dadministration: " />

    <TextView
        android:id="@+id/tvTitulaires"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulaires: " />
    <TextView
        android:id="@+id/tvStatutAdministratif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statut administratif: " />

    <TextView
        android:id="@+id/nb_molecule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nb_molecule: " />
    <TextView
        android:id="@+id/tvDateAutorisation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date d'autorisation: " />

    <TextView
        android:id="@+id/DateAMM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date_AMM: " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnComposition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:padding="8dp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/btnPresentation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P"
            android:padding="8dp"
            android:backgroundTint="#3F51B5"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</LinearLayout>
